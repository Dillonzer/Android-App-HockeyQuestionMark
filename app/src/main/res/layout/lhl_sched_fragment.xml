<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <HorizontalScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/rl_lhl_schedule">

            <ImageView
                android:id="@+id/iv_lhl_logo_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="LHL Logo"
                android:src="@mipmap/lhl_logo" />

            <TextView
                android:id="@+id/tv_lhl_schedule_title"
                android:text="Schedule"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"
                android:textSize="36dp" />

            <!-- data headers paired with data-->
            <TextView
                android:id="@+id/tv_lhl_schedule_week_title"
                android:text="Week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_week_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_date_title"
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/tv_lhl_schedule_week_data"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:layout_toRightOf="@id/tv_lhl_schedule_week_data"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_day_title"
                android:text="Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/tv_lhl_schedule_date_data"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_lhl_schedule_day_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:layout_toRightOf="@id/tv_lhl_schedule_date_data"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_time_title"
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/tv_lhl_schedule_day_data"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_time_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:layout_toRightOf="@id/tv_lhl_schedule_day_data"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_away_title"
                android:text="Away (B)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/tv_lhl_schedule_time_data"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_away_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:layout_toRightOf="@id/tv_lhl_schedule_time_data"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_atsign_title"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/tv_lhl_schedule_away_data"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_atsign_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:layout_toRightOf="@id/tv_lhl_schedule_away_data"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_home_title"
                android:text="Home (R)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/tv_lhl_schedule_atsign_title"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_home_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:layout_toRightOf="@id/tv_lhl_schedule_atsign_data"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_result_title"
                android:text="Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/tv_lhl_schedule_home_data"
                android:layout_below="@id/iv_lhl_logo_schedule"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_lhl_schedule_result_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:layout_below="@id/tv_lhl_schedule_week_title"
                android:layout_toRightOf="@id/tv_lhl_schedule_home_data"
                android:textColor="#000000"/>


        </RelativeLayout>
    </HorizontalScrollView>
</ScrollView>